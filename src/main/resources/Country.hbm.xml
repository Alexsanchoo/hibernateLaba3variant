<?xml version="1.0" encoding="utf-8"?><!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="bsuir.laba5.Country" table="HIBERNATE_COUNTRIES">
        <meta attribute="class-description">This class
            contains developer's details.
        </meta>
        <id name="id" type="int" column="id">
            <generator class="native"/>
        </id>
        <property name="name" column="name" type="string"/>
        <property name="capital" column="capital" type="string"/>
        <property name="population" column="population" type="int"/>
        <property name="area" column="area" type="double"/>
        <property name="govermentForm" column="govermentForm" type="string"/>
    </class>

</hibernate-mapping>
